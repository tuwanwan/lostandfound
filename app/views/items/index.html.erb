<div class="container">

<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Owner</th>
      <th>Type_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.owner %></td>
        <td><%= item.type_id %></td>
       

        <td><%= link_to 'Show', item, :class => 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Edit', edit_item_path(item), :class => 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-xs btn-default'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path , :class => 'btn btn-sm btn-default'%><br><br>
<%= link_to 'Search', search_items_path , :class => 'btn btn-sm btn-default' %>

</div>